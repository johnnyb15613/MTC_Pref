<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Theme Colors -->
	<attr name="colorPrimary" format="color|reference"/>
	<attr name="colorPrimaryDark" format="color|reference"/>
	<attr name="colorAccent" format="color|reference"/>

	<!-- Text Colors -->
	<attr name="textColorPrimary" format="color|reference"/>
	<attr name="textColorSecondary" format="color|reference"/>
	<attr name="textColorPrimaryInverse" format="color|reference"/>
	<attr name="textColorSecondaryInverse" format="color|reference"/>

	<!-- Background Colors -->
	<attr name="primaryBgColor" format="color|reference"/>
	<attr name="secondaryBgColor" format="color|reference"/>
	<attr name="primaryBgColorInverse" format="color|reference"/>
	<attr name="secondaryBgColorInverse" format="color|reference"/>

	<!-- Chooser Swatch -->
	<declare-styleable name="ChooserSwatch">
		<attr name="color_primary" format="color" />
		<attr name="color_dark" format="color" />
		<attr name="color_accent" format="color" />
	</declare-styleable>

</resources>
