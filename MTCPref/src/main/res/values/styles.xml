<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
	
	<!-- Dark Theme -->
    <style name="AppThemeDark" parent="Theme.AppCompat">

		<item name="colorPrimary">@color/material_primary</item>
        <item name="colorPrimaryDark">@color/material_primaryDark</item>
        <item name="colorAccent">@color/material_primary</item>

		<item name="textColorPrimary">@color/textColorPrimary</item>
		<item name="textColorSecondary">@color/textColorSecondary</item>
		<item name="textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
		<item name="textColorSecondaryInverse">@color/textColorSecondaryInverse</item>

		<item name="primaryBgColor">@color/primaryBgColor</item>
		<item name="secondaryBgColor">@color/secondaryBgColor</item>
		<item name="primaryBgColorInverse">@color/primaryBgColorInverse</item>
		<item name="secondaryBgColorInverse">@color/secondaryBgColorInverse</item>

		<item name="colorControlNormal">@color/material_accent</item>
		<item name="colorControlActivated">@color/material_accent</item>
		<item name="colorControlHighlight">@color/material_primaryDark</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
	</style>

	<!-- Light Theme -->
	<style name="AppThemeLight" parent="Theme.AppCompat.Light">

		<item name="colorPrimary">@color/material_primary</item>
        <item name="colorPrimaryDark">@color/material_primaryDark</item>
        <item name="colorAccent">@color/material_primary</item>

		<item name="textColorPrimary">@color/textColorPrimaryInverse</item>
		<item name="textColorSecondary">@color/textColorSecondaryInverse</item>
		<item name="textColorPrimaryInverse">@color/textColorPrimary</item>
		<item name="textColorSecondaryInverse">@color/textColorSecondary</item>

		<item name="primaryBgColor">@color/primaryBgColorInverse</item>
		<item name="secondaryBgColor">@color/secondaryBgColorInverse</item>
		<item name="primaryBgColorInverse">@color/primaryBgColor</item>
		<item name="secondaryBgColorInverse">@color/secondaryBgColor</item>

		<item name="colorControlNormal">@color/material_accent</item>
		<item name="colorControlActivated">@color/material_accent</item>
		<item name="colorControlHighlight">@color/material_primaryDark</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
	</style>

	<!-- ActionBar Theme -->
	<style name="ActionBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
		<item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
	</style>

	<!-- ToggleButton Theme -->
	<style name="ToggleButton" parent="Base.Widget.AppCompat.Button">
		<item name="colorButtonNormal">@color/primaryBgColor</item>
		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="colorAccent">@color/material_primary</item>
	</style>

</resources>
