<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:animateLayoutChanges="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="?attr/primaryBgColor"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardElevation="5dp"
    android:focusable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="4dp" >

        <TextView
            android:id="@+id/themeColorTV"
            android:text="Theme Color"
            android:layout_margin="4dp"
            android:layout_gravity="center_horizontal"
            android:textColor="?attr/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_margin="4dp"
            android:background="?attr/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <TextView
            android:id="@+id/themeDarkColorTV"
            android:text="Theme Dark Color"
            android:layout_margin="4dp"
            android:textColor="?attr/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/themeAccentColorTV"
            android:text="Theme Accent Color"
            android:layout_margin="4dp"
            android:textColor="?attr/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_margin="4dp"
            android:background="?attr/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <TextView
            android:id="@+id/themePrimaryTextColorTV"
            android:text="Primary Text Color"
            android:layout_margin="4dp"
            android:textColor="?attr/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/themeSecondaryTextColorTV"
            android:text="Secondary Text Color"
            android:layout_margin="4dp"
            android:textColor="?attr/textColorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>