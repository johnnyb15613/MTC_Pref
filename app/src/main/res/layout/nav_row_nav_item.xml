<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_row_nav_item_parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/nav_item_marginTopBottom"
    android:layout_marginBottom="@dimen/nav_item_marginTopBottom"
    android:background="?attr/secondaryBgColor"
    android:elevation="1dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/nav_item_paddingTopBottom"
        android:paddingBottom="@dimen/nav_item_paddingTopBottom"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_row_nav_item_icon"
            android:layout_marginLeft="@dimen/nav_item_paddingLeftRight"
            android:layout_width="@dimen/nav_item_iconHeightWidth"
            android:layout_height="@dimen/nav_item_iconHeightWidth"/>

        <TextView
            android:id="@+id/nav_row_nav_item_title"
            android:textColor="?attr/textColorPrimary"
            android:paddingLeft="@dimen/nav_item_paddingLeftRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>
